<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="post-form">
    <%= f.text_field :content, class: 'message-form', placeholder: 'type a message' %>
    <label class="image-form">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'submit-form' %>
<% end %>